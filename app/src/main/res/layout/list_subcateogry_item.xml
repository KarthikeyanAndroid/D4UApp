<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/product_imgview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:src="@drawable/offer_img"
        app:civ_border_color="@color/grey"
        app:civ_border_width="1dp"
        app:civ_shadow_radius="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtview_company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:inputType="text"
        android:maxLength="8"

        android:maxLines="1"
        android:minLines="1"
        android:singleLine="true"
        android:text=""
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@id/product_imgview"
        app:layout_constraintRight_toLeftOf="@id/product_imgview"
        app:layout_constraintTop_toBottomOf="@id/product_imgview" />
</androidx.constraintlayout.widget.ConstraintLayout>